{
  "name": "faaah-sound",
  "displayName": "Faaah Terminal Error Sound",
  "description": "Plays a configurable sound when integrated terminal commands fail or when terminal output matches error patterns.",
  "version": "0.1.0",
  "publisher": "Sohan022",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Sohan022/faah-sound.git"
  },
  "bugs": {
    "url": "https://github.com/Sohan022/faah-sound/issues"
  },
  "homepage": "https://github.com/Sohan022/faah-sound#readme",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "terminal",
    "error",
    "sound",
    "notification",
    "audio",
    "productivity"
  ],
  "files": [
    "out",
    "media",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:faaahSound.toggle",
    "onCommand:faaahSound.playTestSound"
  ],
  "icon": "media/logo.png",
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "faaahSound.toggle",
        "title": "Faaah Sound: Toggle Error Sound"
      },
      {
        "command": "faaahSound.playTestSound",
        "title": "Faaah Sound: Play Test Sound"
      }
    ],
    "configuration": {
      "title": "Faaah Sound",
      "properties": {
        "faaahSound.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable the extension globally."
        },
        "faaahSound.customSoundPath": {
          "type": "string",
          "default": "",
          "description": "Absolute or workspace-relative path to a custom .wav or .mp3 file. Leave empty to use the bundled faaah sound."
        },
        "faaahSound.errorPatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "\\bError\\b",
            "\\bTypeError\\b",
            "\\bFATAL\\b",
            "\\bException\\b",
            "\\bTraceback\\b"
          ],
          "description": "Case-insensitive regular expressions scanned in terminal output in real time."
        },
        "faaahSound.outputScanningEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable real-time terminal output scanning against error patterns."
        },
        "faaahSound.ignoreExitCodes": {
          "type": "array",
          "items": {
            "type": "number"
          },
          "default": [
            130
          ],
          "description": "Non-zero exit codes that should not trigger a sound."
        },
        "faaahSound.debounceMs": {
          "type": "number",
          "minimum": 0,
          "maximum": 60000,
          "default": 1200,
          "description": "Minimum milliseconds between sound triggers."
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node --test out/test/**/*.test.js",
    "lint": "eslint src --ext ts",
    "vscode:prepublish": "npm run compile"
  },
  "devDependencies": {
    "@types/node": "^20.17.57",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "typescript": "^5.6.3"
  }
}
